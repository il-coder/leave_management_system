<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>login Page</title>
  <link href="https://fonts.googleapis.com/css?family=Poppins:400,500&display=swap" rel="stylesheet">
  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    body {
      background-color: #F7F8FA;
      font-family: 'Poppins', sans-serif;
      color: #46444c;
      position: relative;
      border: solid 6px #5A45FF;
      height: 100vh;
    }

    main {
      margin: auto;
      margin-top: 5vh;
      max-height: 60vh;
      padding: 0 30px;
      overflow: auto;
      text-align: center;
    }

    .div-left {
        width: 40vw;
        display: inline-block;
        text-align: right;
        padding-right: 5px;
        margin-bottom: 2vh;
    }    

    .div-right {
        width: 40vw;
        display: inline-block;
        padding-left: 5px;
        text-align: left;
        margin-bottom: 2vh;
    }

    button {
      background-color: #4CAF50; /* Green */
      border: none;
      color: white;
      padding: 7px 16px;
      text-align: center;
      text-decoration: none;
      display: inline-block;
      font-size: 16px;
    }

    button:hover {
      cursor: pointer;
    }

    header {
      margin-top: 5vh;
      text-align: center;
    }

    footer {
      position: absolute;
      bottom: 0;
      background-color: #232F3E;
      color: #fff;
      width: 100%;
      text-align: center;
    }

  </style>
</head>
<body>
  <header>
    <h1>LOGIN</h1>
  </header>
  <main>
    <form action="/login" method="POST">
      <div class="div-left">
                <label for='username'>Enter username/email : </label>
        </div>
        <div class="div-right">
            <input type="text" id="username" name='username'>
        </div>
        <div class="div-left">
            <label for='password'>Enter Password : </label>
        </div>
        <div class="div-right">
            <input type="password" id="password" name='password'>
        </div><br>
        <button type="submit">Login</button>
    </form>
  </main>
    @if(flashMessages.has('status'))
    <footer> {{ flashMessages.get('status') }} </footer>
    @end
    @if(flashMessages.has('errors'))
    <footer>
      @each((field,error) in flashMessages.get('errors'))
      {{field}} : {{error}} <br>
      @end
    </footer>
    @end
</body>
</html>
